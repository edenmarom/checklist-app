<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myLists.MyListsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycelLists"
        android:layout_width="411dp"
        android:layout_height="639dp"
        android:layout_marginBottom="18dp"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:maxHeight="600dp"
        app:layout_constraintBottom_toTopOf="@+id/myLists_addNewListBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myLists_addNewListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="335dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:contentDescription="@string/action_settings"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycelLists" />



</androidx.constraintlayout.widget.ConstraintLayout>