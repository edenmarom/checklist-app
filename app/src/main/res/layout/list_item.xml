<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/cercel_shape">


    <ImageView
        android:id="@+id/image_listItem"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"

        android:src="@drawable/avatar"
        app:layout_constraintEnd_toStartOf="@+id/title_listItem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_listItem"
        android:layout_width="119dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Title"
        android:textSize="100px"
        app:layout_constraintBottom_toTopOf="@+id/date_listItem"
        app:layout_constraintEnd_toStartOf="@+id/edit_B"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_listItem"
        app:layout_constraintTop_toTopOf="@+id/image_listItem"
        app:layout_constraintVertical_bias="0.625" />

    <TextView
        android:id="@+id/date_listItem"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="last update"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_listItem"
        app:layout_constraintEnd_toEndOf="@+id/title_listItem"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/title_listItem" />

    <Button
        android:id="@+id/edit_B"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:text="EDIT"
        app:layout_constraintBottom_toBottomOf="@+id/title_listItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/title_listItem"
        app:layout_constraintTop_toTopOf="@+id/title_listItem"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/listItem_TV"
        android:layout_width="368dp"
        android:layout_height="97dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never"
        android:scrollIndicators="left"
        android:text="LIST ITEMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_listItem"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
